@model Blog.ViewModel.ModelsCombined


<div class="row">
    <div class="col-md-12">
        <form asp-action="_Comment" id="submit-comment-button">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h4><label asp-for="Comment.Name" class="control-label"></label></h4>
                <input asp-for="Comment.Name" class="form-control" />
                <span asp-validation-for="Comment.Name" class="text-danger"></span>
            </div>
            <h4>Comment</h4>
            <div class="form-group">
                <textarea asp-for="Comment.Body" class="form-control" rows="5" id="comment-body-input comment"></textarea>
                <span asp-validation-for="Comment.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


